# =============================================================================
# TERRAFORM CONFIGURATION - COPY THIS FILE
# =============================================================================
#
# Setup Instructions:
# 1. Copy this file:  copy terraform.tfvars.example terraform.tfvars
# 2. Fill in YOUR values below
# 3. Run: terraform init
# 4. Run: terraform apply
#
# =============================================================================

# -----------------------------------------------------------------------------
# AWS CONFIGURATION
# -----------------------------------------------------------------------------

# AWS Region (Ireland)
aws_region = "eu-west-1"

# Your SSH key pair name
# First create one in AWS Console: EC2 -> Key Pairs -> Create Key Pair
# Download the .pem file to C:\Users\YourName\.ssh\
ssh_key_name = "my-key"

# -----------------------------------------------------------------------------
# SECURITY - SSH ACCESS
# -----------------------------------------------------------------------------

# Who can SSH into the servers?
#   "auto"       - Auto-detect your current public IP (recommended)
#   "1.2.3.4/32" - Specific IP address
allowed_ssh_cidr = "auto"

# -----------------------------------------------------------------------------
# DOMAIN CONFIGURATION
# -----------------------------------------------------------------------------

# Your base domain (creates: app.yourdomain.com and jenkins.yourdomain.com)
domain_name = "yourdomain.com"

# -----------------------------------------------------------------------------
# CPANEL DNS CONFIGURATION
# -----------------------------------------------------------------------------
# To get your API token:
# 1. Log in to cPanel
# 2. Go to: Security -> Manage API Tokens
# 3. Click "Create" and copy the token

# Your cPanel URL (include https:// and port :2083)
cpanel_url = "https://your-cpanel-host:2083"

# Your cPanel username
cpanel_username = "your-username"

# Your cPanel API token
cpanel_api_token = "YOUR-API-TOKEN-HERE"
