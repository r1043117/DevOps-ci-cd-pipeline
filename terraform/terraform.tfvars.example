# =============================================================================
# TERRAFORM CONFIGURATION - COPY THIS FILE
# =============================================================================
#
# Setup Instructions:
# 1. Copy this file:  copy terraform.tfvars.example terraform.tfvars
# 2. Fill in YOUR values below
# 3. Run: terraform init
# 4. Run: terraform apply
#
# =============================================================================

# -----------------------------------------------------------------------------
# AWS CONFIGURATION
# -----------------------------------------------------------------------------

# AWS Region (Ireland)
aws_region = "eu-west-1"

# Your SSH key pair name
# First create one in AWS Console: EC2 -> Key Pairs -> Create Key Pair
# Download the .pem file to C:\Users\YourName\.ssh\
ssh_key_name = "my-key"

# -----------------------------------------------------------------------------
# SECURITY - SSH ACCESS
# -----------------------------------------------------------------------------

# Who can SSH into the servers?
#   "auto"       - Auto-detect your current public IP (recommended)
#   "1.2.3.4/32" - Specific IP address
allowed_ssh_cidr = "auto"

